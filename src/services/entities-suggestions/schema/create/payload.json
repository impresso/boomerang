{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/impresso/impresso-middle-layer/tree/master/src/services/entities-suggestions/schema/create/payload.json",
  "description": "Payload for POST /entities-suggestions",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "names": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "offset": {
      "type": "number",
      "minimum": 0
    },
    "limit": {
      "type": "number",
      "minimum": 1
    }
  },
  "required": [
    "names"
  ]
}
