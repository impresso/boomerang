{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/impresso/impresso-middle-layer/tree/master/src/services/search-queries-comparison/schema/intersection/post/request.json",
  "description": "Request payload for POST /search-queries-comparison/intersection",
  "type": "object",
  "additionalProperties": false,
  "allOf": [
    { "$ref": "https://github.com/impresso/impresso-middle-layer/tree/master/src/schema/common/pagination.json" },
    {
      "properties": {
        "queries": {
          "type": "array",
          "minItems": 2,
          "items": {
            "$ref": "#/definitions/search_query"
          },
          "description": "Queries to find intersection of"
        },
        "order_by": {
          "type": "string",
          "description": "Order intersection items by this value"
        }
      }
    }
  ],
  "definitions": {
    "search_query": {
      "type": "object",
      "description": "Search query parameters",
      "additionalProperties": false,
      "properties": {
        "filters": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "https://github.com/impresso/impresso-middle-layer/tree/master/src/schema/search/filter.json"
          }
        }
      },
      "required": [
        "filters"
      ]
    }
  },
  "required": [
    "queries"
  ]
}