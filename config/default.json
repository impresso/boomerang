{
  "host": "localhost",
  "port": 3030,
  "public": "../public/",
  "paginate": {
    "default": 10,
    "max": 50
  },
  "accessRights": {
    "showExcerpt": true,
    "enable": true,
    "unauthorizedIIIFUrl": "unauthorized.json",
    "unauthorizedIIIFImageUrl": "unauthorized.png",
    "unauthorizedContent": "content not available for unauthenticated users ..."
  },
  "redis": {
    "enable": true
  },
  "cache": {
    "enabled": true,
    "override": false
  },
  "celery": {
    "enable": true,
    "CELERY_BROKER_URL": "redis://localhost/4",
    "CELERY_RESULT_BACKEND": "redis://localhost/5"
  },
  "appHooks": {
    "alwaysRequired": true,
    "excludePaths": [
      "newspapers",
      "pages-timelines",
      "issues-timelines",
      "articles-timelines",
      "search",
      "images"
    ]
  },
  "authentication": {
    "entity": "user",
    "service": "users",
    "secret": "***********",
    "authStrategies": [
      "jwt",
      "local"
    ],
    "jwtOptions": {
      "header": {
        "typ": "access"
      },
      "audience": "http://localhost:3030",
      "issuer": "impresso-v1",
      "algorithm": "HS256",
      "expiresIn": "7d"
    },
    "local": {
      "entity": "user",
      "usernameField": "email",
      "passwordField": "password"
    },
    "cookie": {
      "enabled": true,
      "name": "feathers-jwt",
      "httpOnly": false,
      "secure": true
    }
  },
  "neo4j": {
    "host": "bolt://localhost:7687",
    "project": "impresso",
    "auth": {
      "user": "neo4j",
      "pass": "neo4j"
    }
  },
  "media": {
    "host": "http://localhost:3030",
    "path": "/media",
    "protectedPath": "/protected-media",
    "services": [
      "jobs"
    ]
  },
  "multer": {
    "dest": "/tmp/multer"
  },
  "images": {
    "visual-signature": {
      "endpoint": "http://localhost:8000"
    }
  },
  "proxy": {
    "host": "http://localhost:3030",
    "iiif": {
      "internalOnly": false,
      "public": {
        "endpoint": "/public-iiif"
      },
      "protected": {
        "endpoint": "/protected-iiif"
      },
      "epfl": {
        "endpoint": "https://...",
        "auth": {
          "user": "",
          "pass": "*****"
        }
      },
      "epflsafe": {
        "endpoint": "https://...",
        "auth": {
          "user": "",
          "pass": "*****"
        }
      }
    }
  },
  "sequelize": {
    "dialect": "mysql",
    "host": "localhost",
    "port": 3307,
    "database": "*****",
    "auth": {
      "user": "",
      "pass": "*****"
    },
    "tables": {
      "articles": "content_items",
      "pages": "pages",
      "newspapers": "newspapers",
      "users": "auth_user"
    }
  },
  "solr": {
    "dataVersion": 1.0,
    "host": "localhost",
    "port": 8984,
    "auth": {
      "user": "",
      "pass": "*****"
    },
    "search": {
      "endpoint": "https://.../select"
    },
    "mentions": {
      "endpoint": "https://.../select",
      "suggest": "https://.../suggest"
    },
    "topics": {
      "endpoint": "https://.../select",
      "suggest": "https://.../suggest"
    },
    "images": {
      "endpoint": "https://.../select"
    },
    "entities": {
      "endpoint": "https://.../select"
    },
    "embeddings_de": {
      "endpoint": "https://.../select"
    },
    "embeddings_fr": {
      "endpoint": "https://.../select"
    },
    "embeddings_en": {
      "endpoint": "https://.../select"
    }
  },
  "recommender": {
    "byTopics": {
      "endpoint": "https://.../similar"
    }
  }
}
