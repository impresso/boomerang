{
  "host": "localhost",
  "port": 3030,
  "public": "../public/",
  "paginate": {
    "default": 10,
    "max": 50
  },
  "authentication": {
    "secret": "...",
    "strategies": [
      "jwt",
      "local"
    ],
    "path": "/authentication",
    "service": "users",
    "jwt": {
      "header": {
        "typ": "access"
      },
      "audience": "https://yourdomain.com",
      "subject": "anonymous",
      "issuer": "feathers",
      "algorithm": "HS256",
      "expiresIn": "1d"
    },
    "local": {
      "entity": "user",
      "usernameField": "email",
      "passwordField": "password"
    }
  },
  "neo4j": {
    "host": "bolt://localhost:7687",
    "project": "projectname",
    "auth": {
      "user": "neo4j",
      "pass": "neo4j"
    }
  },
  "postgres": {
    "host": "localhost",
    "port": 5432,
    "database": "database",
    "auth":{
      "user": "postgres",
      "pass": "postgres"
    }
  },
  "solr": {
    "host": "localhost",
    "port": 8080,
    "auth": {
      "user": "solr user",
      "pass": "solr pass"
    },
    "search": {
      "endpoint": "https://solr/search/select",
    },
    "articles": {
      "endpoint": "https://solr/articles/select",
    },
    "mentions": {
      "endpoint": "https://solr/mentions/select",
    }
  }
}
